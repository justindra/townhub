{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*",
    "infrastructure/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-multi-entry": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@types/aws-lambda": "8.10.83",
    "@types/jest": "27.0.1",
    "husky": "^7.0.0",
    "jest": "27.1.0",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "rollup": "2.56.3",
    "rollup-plugin-typescript2": "0.30.0",
    "serverless": "2.57.0",
    "serverless-rollup-plugin": "2.3.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.2"
  },
  "scripts": {
    "test": "jest",
    "build:apps": "lerna run build --scope @townhub-apps/* --include-dependencies --",
    "build:libs": "lerna run build --scope @townhub-libs/* --sort --",
    "deploy:services": "lerna run deploy --scope @townhub-services/* --",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {}
}
